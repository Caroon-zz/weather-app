{
  "expo": {
    "name": "Weather",
    "slug": "Weather",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "weather",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/tornado.png",
      "resizeMode": "contain",
      "backgroundColor": "#e3f0ff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "weather",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/tornado.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/tornado.png",
          "resizeMode": "contain",
          "backgroundColor": "#e3f0ff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
